

<div id="form">
    <h2>Login</h2>

    <form class="form" action="/login" method="POST">

        <label> Name
            <input type="text" name="username" placeholder="Nombre" />
        </label>

        <label> Password
            <input type="password" name="password" placeholder="******" />
        </label>

        <button type="submit">Login</button>


    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
</div>